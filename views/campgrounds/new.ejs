<% include ../partials/header %>

<div class="container"> 
    <h1 class="text-center"> Create New campground </h1>
    <div class="row" style="width:30%; margin:20px auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image link"></input>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description"></input>
            </div>
            
            <div class="form-group text-center">
                <button class="btn btn-lg btn-primary" type="submit"> Submit </button>
                <button class="btn btn-lg btn-danger"> <a href="/campgrounds"> Cancel </a> </button>
            </div>
        </form>
   </div> 
</div>



