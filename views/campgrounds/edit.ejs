
<!--EDIT CAMGROUND PAGE-->

<% include ../partials/header %>

<div class="container"> 
    <h1 class="text-center"> Edit <%=campground.name%> </h1>
    <div class="row" style="width:30%; margin:20px auto">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                Name: <input class="form-control" type="text" name=campground[name] value="<%= campground.name %>"></input>
            </div>
            <div class="form-group">
                Image: <input class="form-control" type="text" name=campground[image] value="<%= campground.image %>"></input>
            </div>
            
            <div class="form-group">
                Description: <input class="form-control" type="text" name=campground[description] value="<%= campground.description %>"></input>
            </div>
            
            <div class="form-group text-center">
                <button class="btn btn-lg btn-primary"> Submit </button>
                <button class="btn btn-lg btn-danger"><a href="/campgrounds/<%=campground._id%>"> Cancel </a> </button> 
            </div>
        </form>
    </div> 
</div>



