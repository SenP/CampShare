<% include ../partials/header %>

<div class="container"> 
    <h1 class="text-center"> Create a new comment for <%=campground.name%></h1>
    <div class="row" style="width:30%; margin:20px auto">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment" placeholder="Comment"></input>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-lg btn-primary"> Submit </button>
                <button class="btn btn-lg btn-danger">  <a href="/campgrounds/<%=campground._id%>"> Cancel </a></button>
            </div>
        </form>
   </div> 
</div>



