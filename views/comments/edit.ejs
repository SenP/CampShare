<!--EDIT COMMENT PAGE-->

<% include ../partials/header %>

<div class="container"> 
    <h1 class="text-center"> Edit comment </h1>
    <div class="row" style="width:30%; margin:20px auto">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name=comment[text] value="<%= comment.text %>"></input>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-lg btn-primary"> Submit </button>
                <button class="btn btn-lg btn-danger">  <a href="/campgrounds/<%= campground_id %>"> Cancel </a></button>
            </div>
        </form>
   </div> 
</div>



